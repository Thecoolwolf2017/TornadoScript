# Auto detect text files and perform LF normalization
* text=auto

# C# files
*.cs     diff=csharp text
*.cshtml text
*.csx    text
*.sln    text eol=crlf
*.csproj text eol=crlf

# Visual Studio
*.sln    merge=union
*.suo    binary
*.snk    binary
*.pdb    binary
*.mdb    binary

# Unity
*.unity  binary
*.prefab binary
*.asset  binary

# Documents
*.md       text diff=markdown
*.txt      text
*.yml      text
*.yaml     text
*.json     text
*.config   text
*.ini      text

# Scripts
*.bat      text eol=crlf
*.cmd      text eol=crlf
*.ps1      text eol=crlf
*.sh       text eol=lf
*.props    text eol=crlf
*.targets  text eol=crlf

# Graphics
*.png     binary
*.jpg     binary
*.gif     binary
*.ico     binary
*.svg     text

# Audio
*.wav     binary
*.mp3     binary
*.ogg     binary

# Mod specific
*.asi     binary
*.dll     binary
*.exe     binary
*.meta    text

# Archives
*.7z      binary
*.gz      binary
*.tar     binary
*.tgz     binary
*.zip     binary

# Fonts
*.ttf     binary
*.eot     binary
*.woff    binary
*.woff2   binary

# Make sure Windows batch files preserve CR/LF line endings
*.{cmd,[cC][mM][dD]} text eol=crlf
*.{bat,[bB][aA][tT]} text eol=crlf

# Exclude files from exporting
.gitattributes export-ignore
.gitignore     export-ignore
.gitkeep       export-ignore
